{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        // 1. Static HTML, CSS, JS and Images (for files in /public)
        // /admin.html, /index.html, /styles.css စတာတွေကို ချိတ်ဆက်ပေးသည်။
        {
            "src": "/(.*\\.(html|css|js|jpg|jpeg|png|gif|svg))$",
            "dest": "/public/$1"
        },
        // 2. Uploaded Images (for files in /uploads)
        {
            "src": "/uploads/(.*)",
            "dest": "/uploads/$1"
        },
        // 3. API Routes (Backend Server)
        {
            "src": "/api/(.*)",
            "dest": "index.js"
        },
        // 4. Default Route (Home Page - index.html ကို ပြသရန်)
        {
            "src": "/",
            "dest": "/public/index.html"
        }
    ]
}
